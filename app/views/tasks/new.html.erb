<%= form_with scope: :task, model: [@category, @task], local: true do |f| %>

  <% if @task.errors.any? %>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %> </li>
    <%end%>
  </ul>
  <%end%>

  <h1>Add Task</h1>
  
  <p>
    <%= f.label :task_name %><br/>
    <%= f.text_field :task_name %>
  </p>
  
  <p>
    <%= f.label :task_description %><br/>
    <%= f.text_field :task_description %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
  
  <% end %>
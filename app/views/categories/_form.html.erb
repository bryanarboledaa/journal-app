<%= form_with scope: :category, model: @category, local: true do |f| %>

  <% if @category.errors.any? %>
  <ul>
    <% @category.errors.full_messages.each do |message| %>
      <li><%= message %> </li>
    <%end%>
  </ul>
  <%end%>

  <h1>Add New Category</h1>
  
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %><br/>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.number_field :user_id, id: :category_user_id, value: current_user.id, type: :hidden %>
  </p>

  
  <p>
    <%= f.submit %>
    <%= link_to "Cancel", categories_path %> 
  </p>
  
  <% end %>
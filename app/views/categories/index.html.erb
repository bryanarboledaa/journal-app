<div class="categories-container">
<h1> Journal App </h1>

<%= link_to "Create new", new_category_path %>

<p>Categories:</p>

<tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %> </td> 
      <td><%= link_to "View", category_path(category), method: :get %> </td>
      <td><%= link_to "Edit", edit_category_path(category.id) %> </td>
      <td><%= link_to "Delete", category_path(category.id), method: :destroy, data: { confirm: "Are you sure?"} %> </td>
      <td><%= link_to "View Tasks", category_tasks_path(category.id)  %> </td>
      </br>
    <tr>

    <% end %>
</div>
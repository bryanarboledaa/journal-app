<%= form_with scope: :category, url: category_path, method: :put, local: true do |f| %>

  <% if @category.errors.any? %>
  <ul>
    <% @category.errors.full_messages.each do |message| %>
      <li><%= message %> </li>
    <%end%>
  </ul>
  <%end%>

  <h1>Edit Category</h1>
  
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Category Name</label>
    <%= f.text_field :name, class: "form-control", id: "exampleInputEmail1" %>
  </div>
  
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Category Name</label>
    <%= f.text_field :description, class: "form-control", id: "exampleInputEmail1" %>
  </div>
  
  <p>
    <%= f.submit class: "btn btn-outline-success" %>
  </p>

  <p>
      <%= link_to 'Cancel', categories_path, class: "btn btn-outline-secondary" %> 
  
  <% end %>